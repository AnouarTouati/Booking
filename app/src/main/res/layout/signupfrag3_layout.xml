<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:srcCompat="@drawable/diamond" />

    <View
        android:id="@+id/divider9"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/imageView5"
        app:layout_constraintBottom_toTopOf="@id/salonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/divider8"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:background="@drawable/divider_horizontal_gradient"
        />

    <View
        android:id="@+id/divider8"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/imageView5"
        app:layout_constraintBottom_toTopOf="@id/salonName"
        app:layout_constraintLeft_toRightOf="@id/divider9"
        app:layout_constraintRight_toRightOf="parent"

        android:background="@drawable/divider_horizontal_gradient"
       />



    <EditText
        android:id="@+id/salonName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/divider9"
        app:layout_constraintBottom_toTopOf="@id/stateSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:background="@drawable/edit_text_custom"

        android:hint="Salon Name"
        android:inputType="textPersonName"
        android:textAppearance="@style/edit_text_custom"
        android:textSize="@dimen/_16ssp"
       />



    <Spinner
        android:id="@+id/stateSpinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/salonName"
        app:layout_constraintBottom_toTopOf="@id/communesSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

       />

    <Spinner
        android:id="@+id/communesSpinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/stateSpinner"
        app:layout_constraintBottom_toTopOf="@id/addMap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <CheckBox
        android:id="@+id/addMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/communesSpinner"
        app:layout_constraintBottom_toTopOf="@id/textView8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
app:layout_constraintHorizontal_bias=".8"
        android:text="Add a Map To Your Store"
        android:textSize="@dimen/_14ssp"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addMap"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/men"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:gravity="center|left"
        android:text="For:"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="@dimen/_14ssp"
        />

    <CheckBox
        android:id="@+id/men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addMap"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintLeft_toRightOf="@id/textView8"
        app:layout_constraintRight_toLeftOf="@id/women"

        android:background="@drawable/rectangle"
        android:text="Men"
        android:textSize="@dimen/_14ssp"
        />

    <CheckBox
        android:id="@+id/women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addMap"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintLeft_toRightOf="@id/men"
        app:layout_constraintRight_toRightOf="parent"

        android:background="@drawable/checkboxcolor"
        android:text="Women"
        android:textSize="@dimen/_14ssp"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/textView8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:background="@drawable/signup_button"
        android:text="SUBMIT"
        android:textAppearance="@style/signup_button"
        />


</android.support.constraint.ConstraintLayout>





</ScrollView>