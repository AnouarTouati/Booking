<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainScrollView_Frag1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/signUpFrag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_type_04"
            android:text="SignUP"
            android:textAppearance="@style/signup_button"
            app:layout_constraintBottom_toTopOf="@id/textView3"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmPassword" />

        <Button
            android:id="@+id/signUpFrag1FaceBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/facebook_button"
            android:text="FaceBook"
            android:textAppearance="@style/facebook_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3" />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_type_01"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textAppearance="@style/edit_text_custom"

            android:textColor="#8B8888"

            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider3" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_type_01"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAppearance="@style/edit_text_custom"

            android:textColor="#8B8888"

            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/confirmPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_type_01"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textAppearance="@style/edit_text_custom"

            android:textColor="#8B8888"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/signUpFrag1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@id/divider3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"

            app:srcCompat="@drawable/diamond" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OR"
            android:textAppearance="@style/ortext"
            app:layout_constraintBottom_toTopOf="@id/signUpFrag1FaceBook"

            app:layout_constraintLeft_toRightOf="@id/divider4"
            app:layout_constraintRight_toLeftOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/signUpFrag1" />


        <View
            android:id="@+id/divider3"
            android:layout_width="140dp"
            android:layout_height="10dp"
            android:background="@drawable/divider_horizontal_gradient"
            app:layout_constraintBottom_toTopOf="@id/email"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/divider5"
            app:layout_constraintTop_toBottomOf="@id/imageView2" />

        <View
            android:id="@+id/divider5"
            android:layout_width="140dp"
            android:layout_height="10dp"
            android:background="@drawable/divider_horizontal_gradient"
            app:layout_constraintBottom_toTopOf="@id/email"
            app:layout_constraintLeft_toRightOf="@id/divider3"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/imageView2" />


        <View
            android:id="@+id/divider4"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@drawable/divider_horizontal_custom"
            app:layout_constraintBottom_toTopOf="@id/signUpFrag1FaceBook"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textView3"
            app:layout_constraintTop_toBottomOf="@id/signUpFrag1" />


        <View
            android:id="@+id/divider"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@drawable/divider_horizontal_custom"
            app:layout_constraintBottom_toTopOf="@id/signUpFrag1FaceBook"
            app:layout_constraintLeft_toRightOf="@id/textView3"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/signUpFrag1"

            />


    </android.support.constraint.ConstraintLayout>


</ScrollView>