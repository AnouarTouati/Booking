<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:srcCompat="@drawable/diamond" />

        <View
            android:id="@+id/divider10"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/imageView6"
            app:layout_constraintBottom_toTopOf="@id/imageViewFrag4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/divider11"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:background="@drawable/divider_horizontal_gradient"
            />

        <View
            android:id="@+id/divider11"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/imageView6"
            app:layout_constraintBottom_toTopOf="@id/imageViewFrag4"
            app:layout_constraintLeft_toRightOf="@id/divider10"
            app:layout_constraintRight_toRightOf="parent"

            android:background="@drawable/divider_horizontal_gradient"
            />



        <ImageView
            android:id="@+id/imageViewFrag4"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/divider10"
            app:layout_constraintBottom_toTopOf="@id/ShopPhoneNumberFrag4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:srcCompat="@android:color/darker_gray" />

        <EditText
            android:id="@+id/ShopPhoneNumberFrag4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewFrag4"
            app:layout_constraintBottom_toTopOf="@id/imageView7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/edit_text_custom"

            android:hint="Store Phone Number"
            android:inputType="phone"
            android:textAppearance="@style/edit_text_custom"
            />
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/ShopPhoneNumberFrag4"
            app:layout_constraintBottom_toTopOf="@id/imageView8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/facebookFrag4"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:srcCompat="@drawable/facebook_icon" />

        <EditText
            android:id="@+id/facebookFrag4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/ShopPhoneNumberFrag4"
            app:layout_constraintBottom_toTopOf="@id/instagramFrag4"
            app:layout_constraintLeft_toRightOf="@id/imageView7"
            app:layout_constraintRight_toRightOf="parent"

            android:background="@drawable/edit_text_custom"

            android:hint="facebook.com/"
            android:inputType="textPersonName"
            android:textAppearance="@style/edit_text_custom"
            />
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/imageView7"
            app:layout_constraintBottom_toTopOf="@id/submitFrag4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/instagramFrag4"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:scaleType="fitCenter"

            app:srcCompat="@drawable/instagram_icon" />

        <EditText
            android:id="@+id/instagramFrag4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/facebookFrag4"
            app:layout_constraintBottom_toTopOf="@id/submitFrag4"
            app:layout_constraintLeft_toRightOf="@id/imageView8"
            app:layout_constraintRight_toRightOf="parent"

            android:background="@drawable/edit_text_custom"
            android:hint="instagram.com/"
            android:inputType="textPersonName"
            android:textAppearance="@style/edit_text_custom"
            />

        <Button
            android:id="@+id/submitFrag4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/imageView8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/signup_button"
            android:text="SUBMIT"
            android:textAppearance="@style/signin_button"
            />

    </android.support.constraint.ConstraintLayout>





</ScrollView>